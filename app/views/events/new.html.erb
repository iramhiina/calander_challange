<!-- app/views/events/new.html.erb -->
<h1>Add Event</h1>

<%= form_for @event do |f| %>
<div class="field">
  <%= f.label :notification, 'Enable Notification' %>
  <%= f.check_box :notification %>
</div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Event' %>
  </div>
<% end %>


<%= link_to 'Back', events_path %>
